<!-- app/views/payments/index.html.erb -->
<p class="  align-items-center justify-content-center text-start fw-bolder  text-uppercase ">
    <%=link_to '<i class="bi-arrow-left-circle text-black  text-center fa-2x  "></i>' .html_safe , dashboard_url%>
</p>
<h6>All Payments for <%= @unit.name%> Owner [Hassan]
</h6>


<%= link_to "Create Payment" , new_unit_payment_path() %>
    <div class="container=fluid">
        <div class="row">
            <div class="col-6">

                <table class="table">
                    <thead>
                        <tr>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Tenant</th>
                            <th>Unit</th>
                            <th>Note</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @payments.each do |payment| %>
                            <tr>
                                <td>
                                    <%= number_to_currency(payment.amount) %>
                                </td>
                                <td>
                                    <%= payment.date_paid.strftime("%B %e, %Y") %>
                                </td>
                                <td>
                                    <%= payment.tenant.firstname %>
                                </td>
                                <td>
                                    <%= payment.unit.name %>
                                </td>
                                <td>
                                    <%= payment.payment_method%>
                                </td>
                                <td>
                                    <%= link_to 'Edit Payment' , edit_unit_payment_path(payment.unit, payment),data: {
                                        confirm: "Are you sure you want to delete this payment?" },
                                        class: 'btn btn-success' %>

                                        <%= link_to "Delete" , unit_payment_path(payment.unit,payment), method: :delete,
                                            data: { confirm: "Are you sure you want to delete this payment?" },
                                            class: 'btn btn-danger' %>
                                </td>
                            </tr>
                            <% end %>
                    </tbody>
                </table>
            </div>
            <div class="col-5">
                <h5>Payment History</h5>
            </div>
        </div>
    </div>