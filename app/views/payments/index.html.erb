<%=render "layouts/nav" %>



    <div class="container=fluid p-3">
        <div class="row">
            <div class="col-md-12">
                <%= link_to " Create Payment" , new_unit_payment_path() %>
                    <h6 class=" text-center">All Payments for <%= @unit.name%> Owner

                    </h6>
                    <div class="pay-table d-flex justify-content-center align-content-center text-center">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Amount</th>
                                    <th>Date</th>
                                    <th>Tenant</th>
                                    <th>Unit</th>
                                    <th>Payment Mode</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @payments.each do |payment| %>

                                    <tr>
                                        <td>
                                            <%= number_to_currency(payment.amount) %>
                                        </td>
                                        <td>
                                            <%=payment.date_paid%>
                                        </td>
                                        <td>
                                            <%= payment.tenant.firstname %>
                                        </td>
                                        <td>
                                            <%= payment.unit.name %>
                                        </td>
                                        <td>
                                            <%= payment.payment_method%>
                                        </td>
                                        <td>
                                            <%= link_to 'Edit Payment' , edit_unit_payment_path(payment.unit,
                                                payment),data: {
                                                confirm: "Are you sure you want to delete this payment?" },
                                                class: 'btn btn-success' %>
                                                <%= link_to "Delete" , unit_payment_path(payment.unit,payment), method:
                                                    :delete, data: {
                                                    confirm: "Are you sure you want to delete this payment?" },
                                                    class: 'btn btn-danger' %>
                                        </td>
                                    </tr>
                                    <% end %>
                            </tbody>
                        </table>
                    </div>
            </div>

        </div>
    </div>